{
  "compilerOptions": {
    "strict": true,
    "target": "ES2015",
    "moduleResolution": "bundler",
    "module": "commonjs",
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "composite": true,
    "incremental": true,
    "noEmitOnError": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "rewriteRelativeImportExtensions": true,
    "noResolve": false
  }
}
