{
  "compilerOptions": {
    "strict": true,
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "composite": true,
    "incremental": true,
    "noEmitOnError": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "rewriteRelativeImportExtensions": true,
    "noResolve": false
    // eventually we should turn this on
    // "isolatedDeclarations": true
  }
}
